@model ApartmentManagement.ViewModels.HomeIndexModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Manage Units for Complex</h1>
    <p>Insert CRUD Operations here .</p>
</div>
<a asp-action="Create" asp-controller="Home">Add New Complex</a>
<table class="table">
    <thead>
        <tr>
            <th>
                @*displays heading for column id*@
                @Html.DisplayNameFor(model => model.Complexes.Last().Id)
            </th>
            <th>
                @*displays heading for column name / grabs property name*@
                @Html.DisplayNameFor(temp => temp.Complexes.Last().Name)
            </th>
            <th>
                @*displays heading for column name / grabs property name*@
                @Html.DisplayNameFor(temp => temp.Complexes.Last().Location)
            </th>
            <th>
                @*displays heading for column name / grabs property name*@
                @Html.DisplayNameFor(temp => temp.Complexes.Last().PhoneNumber)
            </th>
            <th>
                @*displays heading for column name / grabs property name*@
                @Html.DisplayNameFor(temp => temp.Complexes.Last().Landlord)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.Complexes)
        {
            <tr>
                @*DisplayFor grabs the actual value*@
                <td>@Html.DisplayFor(modelitem => item.Id)</td>
                <td>@Html.DisplayFor(modelitem => item.Name)</td>
                <td>@Html.DisplayFor(modelitem => item.Location)</td>
                <td>@Html.DisplayFor(modelitem => item.PhoneNumber)</td>
                <td>@Html.DisplayFor(modelitem => item.Landlord)</td>
                <td>
                    <a asp-action="Edit" asp-controller="Home" asp-route-id="@item.Id">Edit</a>
                </td>
                <td>
                    <a asp-action="Details" asp-controller="Home" asp-route-id="@item.Id">Details</a>
                </td>
                <td>
                    <a asp-action="Delete" asp-controller="Home" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
